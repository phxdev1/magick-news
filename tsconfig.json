{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "jsx": "preserve",
    "jsxImportSource": "astro",
    "types": ["astro/client", "node"],
    "baseUrl": ".",
    "outDir": "dist",
    "skipLibCheck": true,
    "isolatedModules": true,
    "noImplicitAny": false,
    "paths": {
      "astro:content": ["./node_modules/astro/content/runtime.js"]
    }
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.astro",
    "scripts/**/*.ts"
  ]
}

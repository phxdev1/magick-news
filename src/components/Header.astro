---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header class="sticky top-0 z-50 w-full bg-dark/80 backdrop-blur-xl border-b border-dark-200/50">
	<nav class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
		<div class="flex items-center h-14">
			<div class="flex items-center flex-1">
				<!-- Logo -->
				<a href="/" class="bg-gradient-to-r from-primary-400 to-blue-400 bg-clip-text text-transparent hover:opacity-80 transition-opacity text-xl font-bold mr-8">
					{SITE_TITLE}
				</a>

				<!-- Primary Navigation -->
				<div class="hidden lg:flex items-center">
					<HeaderLink href="/">Home</HeaderLink>
					<HeaderLink href="/about">About</HeaderLink>
				</div>
			</div>

			<!-- Right section -->
			<div class="flex items-center gap-2">
				<!-- Search -->
				<div class="hidden md:flex items-center relative w-64 xl:w-72">
					<div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
						<svg class="h-4 w-4 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
						</svg>
					</div>
					<input 
						type="search" 
						placeholder="Search articles..." 
						class="w-full bg-dark-100/50 border-dark-200/50 rounded-lg pl-9 pr-4 py-1.5 text-sm text-white placeholder-gray-400 focus:ring-2 focus:ring-primary-500/40 focus:border-primary-500/40 transition-all duration-300"
					/>
					<kbd class="absolute right-2 top-1/2 -translate-y-1/2 hidden sm:inline-flex items-center rounded border border-dark-300/50 px-1.5 font-mono text-[10px] text-gray-500">âŒ˜K</kbd>
				</div>

				<!-- Social Links -->
				<div class="hidden sm:flex items-center">
					<a 
						href="https://twitter.com/magick_ai" 
						target="_blank" 
						rel="noopener" 
						class="text-gray-400 hover:text-white transition-colors p-2 rounded-lg hover:bg-dark-100"
					>
						<span class="sr-only">Follow Magick.AI on Twitter</span>

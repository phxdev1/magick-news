---
interface Props {
	date: Date;
}

const { date: rawDate } = Astro.props;
const date = rawDate instanceof Date ? rawDate : new Date(rawDate);
---

<time datetime={date instanceof Date ? date.toISOString() : ''}>
	{
		date.toLocaleDateString('en-us', {
			year: 'numeric',
			month: 'short',
			day: 'numeric',
		})
	}
</time>

---
import { type CollectionEntry, getCollection } from 'astro:content';
import BlogPost from '../../layouts/BlogPost.astro';

export async function getStaticPaths() {
	const posts = await getCollection('blog');
	return posts.map((post) => ({
		params: { slug: post.data.slug },
		props: { id: post.id },
	}));
}

type Props = {
	id: string;
};

const { id } = Astro.props;
const posts = await getCollection('blog');
const post = posts.find(p => p.data.slug === Astro.params.slug);

if (!post) {
	throw new Error(`Post "${Astro.params.slug}" not found`);
}

// Validate required fields
if (!post.data.title || !post.data.publish_date || !post.data.author) {
	throw new Error(`Post ${post.data.slug} is missing required fields`);
}

const { Content } = await post.render();
---

<BlogPost {...post.data}>
	<Content />
</BlogPost>

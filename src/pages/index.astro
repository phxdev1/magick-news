---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
import FormattedDate from '../components/FormattedDate.astro';

const featuredArticles = [
	{
		title: "GPT-4's Latest Breakthrough: Understanding Complex Visual Inputs",
		excerpt: "OpenAI's latest model shows remarkable ability to interpret and reason about images, diagrams, and charts with human-like understanding.",
		image: "/blog-placeholder-1.jpg",
		date: new Date('2024-01-30'),
		author: "Sarah Chen",
		category: "AI Research",
		slug: "ai-research",
		readingTime: "6 min read",
		relevance: "98% match",
		trending: true
	},
	{
		title: "DeepMind Announces Revolutionary Protein Structure Prediction Model",
		excerpt: "New AI system achieves unprecedented accuracy in predicting protein structures, promising breakthroughs in drug discovery and biological research.",
		image: "/blog-placeholder-2.jpg",
		date: new Date('2024-01-29'),
		author: "Michael Roberts",
		category: "Machine Learning",
		slug: "machine-learning",
		readingTime: "8 min read",
		relevance: "95% match"
	},
	{
		title: "Tesla's Self-Driving AI: A Deep Dive into the Latest Updates",
		excerpt: "Analyzing the recent improvements in Tesla's autonomous driving capabilities and the AI technology behind them.",
		image: "/blog-placeholder-3.jpg",
		date: new Date('2024-01-28'),
		author: "David Kumar",
		category: "Robotics",
		slug: "robotics",
		readingTime: "5 min read",
		relevance: "92% match",
		hot: true
	}
];

const forYouArticles = [
	{
		title: "The Rise of AI in Healthcare: 2024 Trends",
		excerpt: "How artificial intelligence is transforming medical diagnosis, treatment planning, and patient care.",
		image: "/blog-placeholder-4.jpg",
		date: new Date('2024-01-27'),
		author: "Emily Wong",
		category: "Deep Learning",
		slug: "deep-learning",
		readingTime: "7 min read",
		relevance: "96% match",
		reason: "Based on your interest in healthcare AI"
	},
	{
		title: "Understanding Transformer Architecture: A Comprehensive Guide",
		excerpt: "A detailed exploration of the technology powering modern language models.",
		image: "/blog-placeholder-5.jpg",
		date: new Date('2024-01-26'),
		author: "Alex Thompson",
		category: "AI Research",
		slug: "ai-research",
		readingTime: "10 min read",
		relevance: "94% match",
		reason: "Similar to articles you've read"
	},
	{
		title: "Ethical AI Development: Best Practices for 2024",
		excerpt: "Guidelines and frameworks for developing responsible AI systems.",
		image: "/blog-placeholder-about.jpg",
		date: new Date('2024-01-25'),
		author: "Rachel Martinez",
		category: "AI Research",
		slug: "ai-research",
		readingTime: "6 min read",
		relevance: "91% match",
		reason: "Trending in your network"
	}
];
---

<!doctype html>
<html lang="en" class="h-full">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body class="h-full">
		<Header />
		<main class="relative">
			<!-- Background gradient effects -->
			<div class="absolute inset-0">
				<div class="absolute inset-0 bg-gradient-radial from-primary-900/20 via-transparent to-transparent"></div>
				<div class="absolute inset-0 bg-gradient-conic from-primary-900/30 via-transparent to-transparent opacity-40"></div>
				<div class="absolute top-0 right-0 w-1/2 h-1/2 bg-[radial-gradient(circle_at_center,_rgba(139,92,246,0.15),_transparent_50%)]"></div>
				<div class="absolute bottom-0 left-0 w-1/2 h-1/2 bg-[radial-gradient(circle_at_center,_rgba(59,130,246,0.15),_transparent_50%)]"></div>
			</div>

			<div class="relative max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8 sm:py-12">
				<section class="mb-12 sm:mb-16">
					<h2 class="text-2xl sm:text-3xl font-bold mb-6 sm:mb-8 pb-4 border-b border-dark-200/50">
						<span class="gradient-text">Featured Stories</span>
					</h2>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
						{
							featuredArticles.map((article) => (
								<article class="article-card group">
									<div class="article-image-container">
										<img 
											src={article.image} 
											alt="" 
											class="article-image group-hover:scale-105" 
										/>
										<div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/50 to-transparent opacity-80"></div>
										{article.trending && (
											<div class="absolute top-4 right-4 px-2 py-1 bg-primary-600/90 backdrop-blur-sm rounded-full text-xs font-medium text-white flex items-center gap-1">
												<span class="relative flex h-2 w-2">
													<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-primary-400 opacity-75"></span>
													<span class="relative inline-flex rounded-full h-2 w-2 bg-primary-500"></span>
												</span>
												Trending
											</div>
										)}
										{article.hot && (
											<div class="absolute top-4 right-4 px-2 py-1 bg-orange-600/90 backdrop-blur-sm rounded-full text-xs font-medium text-white flex items-center gap-1">
												<span class="relative flex h-2 w-2">
													<span class="animate-ping absolute inline-flex h-full w-full rounded-full bg-orange-400 opacity-75"></span>
													<span class="relative inline-flex rounded-full h-2 w-2 bg-orange-500"></span>
												</span>
												Hot
											</div>
										)}
									</div>
									<div class="article-content">
										<div class="flex items-center gap-4 mb-4">
											<span class={`article-category ${article.slug}`}>
												{article.category}
											</span>
											<span class="text-gray-400 text-sm">{article.readingTime}</span>
										</div>
										<h3>
											<a href="#" class="article-title">
												{article.title}
											</a>
										</h3>
										<p class="article-excerpt">{article.excerpt}</p>
										<div class="article-meta">
											<span class="font-medium">{article.author}</span>
											<div class="flex items-center gap-3">
												<FormattedDate date={article.date} />
												<span class="text-primary-400/80">{article.relevance}</span>
											</div>
										</div>
									</div>
								</article>
							))
						}
					</div>
				</section>

				<section class="mb-12 sm:mb-16">
					<div class="flex items-center justify-between mb-6 sm:mb-8 pb-4 border-b border-dark-200/50">
						<h2 class="text-2xl sm:text-3xl font-bold">
							<span class="gradient-text">For You</span>
						</h2>
						<button class="text-primary-400 hover:text-primary-300 text-sm font-medium transition-colors">
							Customize â†’
						</button>
					</div>
					<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 sm:gap-8">
						{
							forYouArticles.map((article) => (
								<article class="article-card group">
									<div class="article-image-container">
										<img 
											src={article.image} 
											alt="" 
											class="article-image group-hover:scale-105" 
										/>
										<div class="absolute inset-0 bg-gradient-to-t from-dark via-dark/50 to-transparent opacity-80"></div>
									</div>
									<div class="article-content">
										<div class="flex items-center gap-4 mb-4">
											<span class={`article-category ${article.slug}`}>
												{article.category}
											</span>
											<span class="text-gray-400 text-sm">{article.readingTime}</span>
										</div>
										<div class="text-primary-400/80 text-sm mb-2">{article.reason}</div>
										<h3>
											<a href="#" class="article-title">
												{article.title}
											</a>
										</h3>
										<p class="article-excerpt">{article.excerpt}</p>
										<div class="article-meta">
											<span class="font-medium">{article.author}</span>
											<div class="flex items-center gap-3">
												<FormattedDate date={article.date} />
												<span class="text-primary-400/80">{article.relevance}</span>
											</div>
										</div>
									</div>
								</article>
							))
						}
					</div>
				</section>

				<section class="relative overflow-hidden rounded-2xl">
					<div class="absolute inset-0">
						<div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 to-dark-100/90"></div>
						<div class="absolute inset-0 bg-[radial-gradient(circle_at_top_right,_rgba(139,92,246,0.15),_transparent_50%)]"></div>
						<div class="absolute inset-0 bg-[radial-gradient(circle_at_bottom_left,_rgba(59,130,246,0.15),_transparent_50%)]"></div>
					</div>
					<div class="relative px-4 py-12 sm:px-12 lg:px-16">
						<div class="max-w-3xl mx-auto text-center">
							<h2 class="text-2xl sm:text-3xl font-bold tracking-tight sm:text-4xl">
								<span class="gradient-text">Never Miss an Update</span>
							</h2>
							<p class="mt-4 text-lg leading-6 text-gray-300">
								Get personalized AI news and insights delivered straight to your inbox.
							</p>
							<form class="mt-8 sm:flex justify-center max-w-xl mx-auto">
								<label for="email-address" class="sr-only">Email address</label>
								<div class="flex-1 min-w-0">
									<input
										id="email-address"
										name="email"
										type="email"
										autocomplete="email"
										required
										class="block w-full rounded-l-lg sm:rounded-r-none px-5 py-3 text-base text-white placeholder-gray-400"
										placeholder="Enter your email"
									/>
								</div>
								<div class="mt-3 sm:mt-0 sm:ml-3">
									<button
										type="submit"
										class="glow-effect block w-full rounded-lg sm:rounded-l-none px-5 py-3 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 focus:outline-none focus:ring-2 focus:ring-primary-500 focus:ring-offset-2 focus:ring-offset-dark sm:px-10"
									>
										Subscribe
									</button>
								</div>
							</form>
							<p class="mt-3 text-sm text-gray-400">
								Get a weekly digest of top articles, tailored to your interests.
							</p>
						</div>
					</div>
				</section>
			</div>
		</main>
		<Footer />
	</body>
</html>
